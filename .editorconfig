# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.swift]
indent_size = 4

[*.{yaml,yml,xml}]
indent_size = 2

[*.md]
indent_size = 2
x-soft-wrap-text = true

[Makefile]
indent_style = tab

[*.sh]
indent_style = tab
